<style>
    body {
        background-color: #deb887; /* Darker than wheat */
        font-family: 'Arial', sans-serif;
    }

    h3 {
        color: #4e3820; /* Darker brown for headings */
    }

    .btn-info {
        background-color: #c19a6b; /* Complementary button color */
        border-color: #a67c52; /* Slightly darker border */
        color: #fff;
    }

    .btn-info:hover {
        background-color: #a67c52; /* Darker brown on hover */
        border-color: #8b5e3c;
    }

    .table {
        background-color: fff; /* White background for the table */
        border: 1px solid #a67c52; /* Subtle dark wheat border */
        border-radius: 8px;
    }

    .table th {
        background-color: #c19a6b; /* Slightly darker tone for headers */
        color: #4e3820; /* Darker text for contrast */
    }

    .table td {
        background-color: cornsilk; /* Keep cells white for readability */
        color: #4e3820;
    }

    .pagination .page-link {
        color: #4e3820; /* Dark brown text for pagination links */
        background-color: #c19a6b; /* Darker wheat tone for pagination buttons */
        border-color: #a67c52;
    }

    .pagination .page-link:hover {
        background-color: #a67c52;
        color: #fff;
    }

    .pagination .page-item.disabled .page-link {
        background-color: #deb887; /* Disabled state */
        color: #8b5e3c;
    }

    img {
        border: 2px solid #a67c52; /* Subtle border for images */
        border-radius: 4px;
    }
</style>

<h3><%-pageTitle  %></h3>

<a href="/admin/products/create" class="btn btn-info">Create New Product</a>
<div>
    Page <%= page %> of <%= totalPages %>
</div>
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item <%= page==1? "disabled":"" %>">
            <a class="page-link" href="/admin/products/<%= Number(page)-1 %>">Previous</a>
        </li>
        <% for( let index = 1; index <= totalPages; index++ ) { %>
            <li class="page-item">
                <a class="page-link" href="/admin/products/<%= index %>"><%= index %></a>
            </li>
        <% } %>
        <li class="page-item <%= page==totalPages?"disabled":"" %>">
            <a class="page-link" href="/admin/products/<%= Number(page)+1 %>">Next</a>
        </li>
    </ul>
</nav>

<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>Title</th>
            <th>Price</th>
            <th>Description</th>
            <th>Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% for( let index = 0; index < products.length; index++ ) { %>
            <tr>
                <td><%= products[index]._id %></td>
                <td><%= products[index].title %></td>
                <td><%= products[index].price %></td>
                <td><%= products[index].description %></td>
                <td>
                    <img src="/<%= products[index].picture %>" width="100px" />
                </td>
                <td>
                    <a href="/admin/products/edit/<%= products[index]._id %>" class="btn btn-warning">Edit</a>
                    <a href="/admin/products/delete/<%= products[index]._id %>" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>
