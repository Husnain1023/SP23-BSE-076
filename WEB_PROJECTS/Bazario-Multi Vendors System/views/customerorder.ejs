<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Orders - Bazario</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: #000;
      color: #fff;
      padding: 60px 20px;
    }

    h1 {
      text-align: center;
      font-size: 2.6rem;
      margin-bottom: 50px;
      background: linear-gradient(90deg, #ff0000, #ff4d4d);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      font-weight: 800;
      text-shadow: 0 2px 12px rgba(255, 0, 0, 0.3);
    }

    .order-card {
      background: rgba(255, 255, 255, 0.03);
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.08);
      box-shadow: 0 0 30px rgba(255, 0, 0, 0.1);
      padding: 30px;
      margin-bottom: 45px;
      backdrop-filter: blur(14px);
      transition: 0.3s ease;
    }

    .order-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 0 60px rgba(255, 0, 0, 0.25);
    }

    .order-header {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      margin-bottom: 20px;
    }

    .order-id {
      font-size: 1.2rem;
      color: #ff4d4d;
      font-weight: 700;
    }

    .status-badge {
      background: #ff4d4d;
      padding: 6px 14px;
      border-radius: 999px;
      font-size: 0.9rem;
      font-weight: 600;
      color: #000;
      box-shadow: 0 0 10px rgba(255, 77, 77, 0.3);
    }

    .info-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      margin-top: 20px;
    }

    .info-section h4 {
      color: #ff4d4d;
      font-size: 1.1rem;
      margin-bottom: 10px;
      font-weight: 600;
    }

    .info-section table {
      width: 100%;
      font-size: 0.95rem;
      color: #ccc;
    }

    .info-section td {
      padding: 6px 0;
    }

    .info-section td:first-child {
      font-weight: 600;
      color: #ffcc00;
      width: 120px;
    }

    .product-list {
      margin-top: 30px;
    }

    .product-list h4 {
      color: #ff4d4d;
      font-size: 1.1rem;
      margin-bottom: 10px;
      font-weight: 600;
    }

    .product-item {
      display: flex;
      align-items: center;
      margin-bottom: 16px;
      background: rgba(255,255,255,0.02);
      padding: 12px;
      border-radius: 12px;
      border: 1px solid rgba(255,255,255,0.05);
    }

    .product-item img {
      width: 70px;
      height: 70px;
      object-fit: cover;
      border-radius: 12px;
      margin-right: 16px;
      border: 1px solid rgba(255, 255, 255, 0.08);
    }

    .rider-section {
      margin-top: 30px;
      padding: 20px;
      background: rgba(255, 255, 255, 0.03);
      border-left: 4px solid #ff4d4d;
      border-radius: 14px;
    }

    .rider-section h4 {
      color: #ff4d4d;
      font-size: 1.05rem;
      margin-bottom: 10px;
      font-weight: 600;
    }

    .no-rider {
      font-style: italic;
      color: #888;
      margin-top: 20px;
    }

    @media (max-width: 768px) {
      .info-grid {
        grid-template-columns: 1fr;
      }

      .order-header {
        flex-direction: column;
        gap: 10px;
      }

      .product-item {
        flex-direction: column;
        align-items: flex-start;
      }

      .product-item img {
        margin-bottom: 10px;
      }
    }
  </style>
</head>
<body>

  <h1>Your Orders</h1>

  <% if (orders.length === 0) { %>
    <p style="text-align:center;">No orders found.</p>
  <% } else { %>
    <% orders.forEach(order => { %>
      <div class="order-card">

        <div class="order-header">
          <div class="order-id">Order ID: <%= order._id %></div>
          <div class="status-badge"><%= order.status %> - <%= order.deliveryStatus %></div>
        </div>

        <div class="info-grid">

          <div class="info-section">
            <h4>Customer Info</h4>
            <table>
              <tr><td>Name:</td><td><%= order.customer.name %></td></tr>
              <tr><td>Email:</td><td><%= order.customer.email %></td></tr>
              <tr><td>Phone:</td><td><%= order.customer.phone %></td></tr>
            </table>
          </div>

          <div class="info-section">
            <h4>Order Details</h4>
            <table>
              <tr><td>Total:</td><td>Rs. <%= order.totalAmount.toFixed(2) %></td></tr>
              <tr><td>Payment:</td><td><%= order.paymentMethod.toUpperCase() %></td></tr>
              <tr><td>Placed On:</td><td><%= order.createdAt.toDateString() %></td></tr>
            </table>
          </div>

        </div>

        <div class="product-list">
          <h4>Products Ordered</h4>
          <% order.products.forEach(p => { %>
            <div class="product-item">
              <img src="<%= p.productId.picture %>" alt="Product Image">
              <div>
                <strong><%= p.productId.title %></strong><br>
                <small><%= p.quantity %> pcs â€” Rs. <%= p.price %></small>
              </div>
            </div>
          <% }) %>
        </div>

        <% if (order.rider) { %>
          <div class="rider-section">
            <h4>Rider Info</h4>
            <p>Name: <%= order.rider.name %></p>
            <p>Phone: <%= order.rider.phone %></p>
          </div>
        <% } else { %>
          <p class="no-rider">No rider assigned yet.</p>
        <% } %>

      </div>
    <% }) %>
  <% } %>

</body>
</html>
