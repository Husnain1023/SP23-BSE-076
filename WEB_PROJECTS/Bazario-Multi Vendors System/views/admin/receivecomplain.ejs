<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Panel - Complaints</title>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
  <style>
    body {
      background: url('/ap.avif') no-repeat center center fixed;
      background-size: cover;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      color: #e0e6f2;
    }
    nav {
      background-color: rgba(15, 23, 42, 0.95);
      padding: 0.75rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    nav .logo {
      font-weight: 700;
      font-size: 1.5rem;
      color: #fbbf24;
    }
    nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }
    nav ul li {
      display: inline;
    }
    nav ul li a {
      color: #e0e6f2;
      text-decoration: none;
      font-weight: bold;
      margin-left: 1rem;
      padding: 6px 12px;
      border-radius: 6px;
      transition: background-color 0.3s ease;
    }
    nav ul li a.active,
    nav ul li a:hover {
      background-color: #fbbf24;
      color: #1e293b;
    }
    .admin-panel-container {
      max-width: 1200px;
      margin: 3rem auto;
      padding: 2rem;
      background: rgba(15, 23, 42, 0.85);
      border-radius: 12px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.7);
      color: #e0e6f2;
    }
    .admin-panel-container h1 {
      text-align: center;
      font-size: 2.5rem;
      color: #fbbf24;
    }
    .styled-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0 12px;
      background-color: #1e293b;
      border-radius: 12px;
    }
    .styled-table thead tr {
      background-color: #334155;
      color: #fbbf24;
    }
    .styled-table th,
    .styled-table td {
      padding: 0.9rem 1rem;
      text-align: left;
      vertical-align: top;
      font-size: 0.95rem;
      border-bottom: 1px solid #475569;
    }
    .styled-table tbody tr:hover {
      background-color: #475569;
    }
  </style>
</head>
<body>
  <nav>
    <div class="logo">AdminPanel</div>
    <ul>
      <li><a href="/admin/dashboard" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
    </ul>
  </nav>

  <div class="admin-panel-container">
    <h1>User Complaints</h1>
    <table class="styled-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Type</th>
          <th>Order ID</th>
          <th>Message</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% for (let complaint of complaints) { %>
          <tr>
            <td><%= complaint.fullName %></td>
            <td><%= complaint.email %></td>
            <td><%= complaint.phone || '-' %></td>
            <td><%= complaint.type %></td>
            <td><%= complaint.orderId || 'N/A' %></td>
            <td><%= complaint.message %></td>
            <td><%= complaint.createdAt.toLocaleString() %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
