<div class="container">
    <h4>Products in Cart</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Picture</th>
                <th>Product</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < products.length; i++) { %>
                <tr>
                    <td>
                        <img  style="width: 80px; border-radius: 8px;" src="/<%= products[i].picture %>" alt="">
                    </td>
                    <td>
                        <span class="item-title"><%= products[i].title %></span>
                    </td>
                    <td>
                        <span class="item-price">PKR <%= products[i].price %></span>
                    </td>
                    <td>
                        <form action="/cart/delete/<%= products[i]._id %>" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>

                    </td>
                    
                </tr>
            <% } %>
        </tbody>
        
    </table>
    <div class="text-end mt-3">
        <a href="/users/proceed-to-checkout" class="btn btn-success btn-lg">Proceed to Checkout</a>
    </div>
    
</div>
</div>


